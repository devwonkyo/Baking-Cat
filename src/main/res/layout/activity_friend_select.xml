<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendSelectActivity">

    <EditText
        android:id="@+id/friendselect_edittext_id"
        android:padding="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        android:hint="닉네임 검색"
        android:textColorHint="@color/colorWhite"
        android:background="@color/colorDarkGray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/friendselect_recyclerview"
        app:layout_constraintTop_toBottomOf="@+id/friendselect_edittext_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/friendselect_button_plus"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:background="@drawable/gray_round_button"
        android:textColor="#ffffff"
        android:text="확인"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/friendselect_button_plus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="70dp"
        android:layout_height="40dp" />

</android.support.constraint.ConstraintLayout>