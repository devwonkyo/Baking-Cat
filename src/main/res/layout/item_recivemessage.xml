<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintWidth_max="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/recivemessageitem_imageview_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cat1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recivemessageitem_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="고양이"
        app:layout_constraintLeft_toRightOf="@+id/recivemessageitem_imageview_profile"
        app:layout_constraintTop_toTopOf="parent" />


    <com.github.library.bubbleview.BubbleTextView
        android:maxWidth="250dp"
        android:id="@+id/recivemessageitem_textview_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="11111111111111111111111111111111111111111111111111111111111111111111111111"
        android:textColor="#ffffff"
        app:angle="8dp"
        app:arrowCenter="false"
        app:arrowHeight="10dp"
        app:arrowLocation="left"
        app:arrowPosition="6dp"
        app:arrowWidth="8dp"
        app:bubbleColor="@color/colorGray"
        app:layout_constraintLeft_toRightOf="@+id/recivemessageitem_imageview_profile"
        app:layout_constraintTop_toBottomOf="@+id/recivemessageitem_textview_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"/>

    <TextView
        android:id="@+id/recivemessageitem_textview_messagetime"
        android:layout_marginLeft="3dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="메시지 시간"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toRightOf="@+id/recivemessageitem_textview_message"
        />


    <TextView
        android:id="@+id/recivemessageitem_textview_unreadcount"
        android:layout_marginLeft="3dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="1"
        android:textColor="@color/colorDarkGray"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toRightOf="@+id/recivemessageitem_textview_messagetime"
        />


</android.support.constraint.ConstraintLayout>