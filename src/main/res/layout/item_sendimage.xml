<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:padding="10dp"
        android:scaleType="fitXY"
        android:background="@drawable/sendimage_line"
        android:layout_marginRight="10dp"
        android:id="@+id/sendimageitem_imageview_message"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/sendimageitem_textview_messagetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="메시지 시간"
        android:textSize="13dp"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendimageitem_imageview_message"
        />

    <TextView
        android:id="@+id/sendimageitem_textview_unreadcount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:textColor="@color/colorDarkGray"
        android:text="1"
        android:textSize="13dp"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toTopOf="@+id/sendimageitem_textview_messagetime"
        app:layout_constraintEnd_toStartOf="@+id/sendimageitem_imageview_message"
        />
</android.support.constraint.ConstraintLayout>