<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritePostActivity">

    <ImageView
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_menu_gallery"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/modifypost_imageview_postimage"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/modifypost_imageview_postimage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/modifypost_textview_notcie"
        android:text="사진을 눌러 이미지를 수정하세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/modifypost_editttext_post"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/modifypost_textview_notcie"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/modifypost_button_update"
        android:textColor="#ffffff"
        android:background="@drawable/gray_round_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:text="업데이트"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>