<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatRoomActivity">


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/chatroom_recyclerview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/chatroom_button_messagesend"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/chatroom_image_selectoption"
        android:src="@drawable/icon_selectoption"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <EditText
        android:id="@+id/chatroom_edittext_message"
        android:layout_marginLeft="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintLeft_toRightOf="@+id/chatroom_image_selectoption"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/chatroom_button_messagesend"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/chatroom_button_messagesend"
        android:background="@drawable/gray_round_button"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="전송"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="60dp"
        android:layout_height="40dp" />



</android.support.constraint.ConstraintLayout>