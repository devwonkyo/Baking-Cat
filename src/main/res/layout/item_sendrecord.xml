<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/sendrecorditem_linearlayout"
        android:padding="12dp"
        android:background="@drawable/gray_round_button"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sendrecorditem_imageview_message"
            android:src="@drawable/icon_play"
            android:layout_gravity="center_horizontal"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:text="음성 메시지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/sendrecorditem_textview_messagetime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="메시지 시간"
        android:textSize="13dp"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendrecorditem_linearlayout"
        />

    <TextView
        android:id="@+id/sendimageitem_textview_unreadcount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkGray"
        android:text="1"
        android:layout_marginBottom="7dp"
        android:textSize="13dp"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sendrecorditem_textview_messagetime"
        />
</android.support.constraint.ConstraintLayout>