<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_menu_gallery"
        android:id="@+id/modify_imageview_profile"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/modify_textview_textmodify"
        app:layout_constraintTop_toBottomOf="@+id/modify_imageview_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorDarkGray"
        android:text="이미지를 눌러 새로운 사진을 등록해주세요."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/modify_textview_textmodify"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/modify_textview_idtext"
        android:text="아이디"
        android:textColor="@color/colorDarkGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:textColor="@color/colorDarkGray"
        app:layout_constraintTop_toBottomOf="@+id/modify_textview_idtext"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/modify_textview_id"
        android:layout_marginLeft="20dp"
        android:text="ex)wonkyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:textColorHint="@color/colorDarkGray"
        app:layout_constraintTop_toBottomOf="@+id/modify_textview_id"
        android:id="@+id/textlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputEditText
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/modify_edittext_nicname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/modify_button_modify"
        android:background="@drawable/gray_round_button"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/textlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="완료"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>