<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemfollowing_imageview_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"

        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/itemfollowing_textview_message"
        android:text="OOO님이 팔로우를 요청했습니다."
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/itemfollowing_imageview_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/itemfollowing_button_accept"
        android:background="@drawable/gray_round_button"
        android:textColor="#ffff"
        android:text="수락"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toLeftOf="@+id/itemfollowing_button_refuse"
        android:layout_width="50dp"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/itemfollowing_button_refuse"
        android:background="@drawable/gray_round_button"
        android:textColor="#ffff"
        android:text="거절"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:layout_width="50dp"
        android:layout_height="35dp" />

</android.support.constraint.ConstraintLayout>