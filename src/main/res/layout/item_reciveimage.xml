<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:layout_constraintWidth_max="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/reciveimageitem_imageview_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cat1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reciveimageitem_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="고양이"
        app:layout_constraintLeft_toRightOf="@+id/reciveimageitem_imageview_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:padding="10dp"
        android:background="@drawable/reciveimage_line"
        android:id="@+id/reciveimageitem_imageview_message"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@+id/reciveimageitem_imageview_profile"
        app:layout_constraintTop_toBottomOf="@+id/reciveimageitem_textview_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        android:layout_width="150dp"
        android:layout_height="150dp"/>


    <TextView
        android:id="@+id/reciveimageitem_textview_messagetime"
        android:layout_marginLeft="3dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="메시지 시간"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toRightOf="@+id/reciveimageitem_imageview_message"
        />


    <TextView
        android:id="@+id/reciveimageitem_textview_unreadcount"
        android:layout_marginLeft="3dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="1"
        android:textColor="@color/colorDarkGray"
        app:layout_constraintBottom_toTopOf="@+id/reciveimageitem_textview_messagetime"
        android:layout_marginBottom="3dp"
        app:layout_constraintLeft_toRightOf="@+id/reciveimageitem_imageview_message"
        />


</android.support.constraint.ConstraintLayout>