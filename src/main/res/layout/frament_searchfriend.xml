<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/searchfriendfragment_imageview_searchimage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_search"
        android:tint="@color/colorDarkGray"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <EditText
        android:hint="아이디로 친구검색.."
        android:id="@+id/searchfriendfragment_edittext_searchid"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toLeftOf="@+id/searchfriendfragment_imageview_searchimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchfriendfragment_recyclerview"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/searchfriendfragment_imageview_searchimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>


</android.support.constraint.ConstraintLayout>