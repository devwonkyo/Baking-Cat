<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/itemcomment_imageview_profile"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:textColor="#000000"
        android:textSize="13dp"
        android:text="아이디"
        android:textStyle="bold"
        android:id="@+id/itemcomment_textview_id"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/itemcomment_imageview_profile"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="13dp"
        android:maxWidth="250dp"
        android:text="댓글 내용ㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇㅇ"
        android:id="@+id/itemcomment_textview_comment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/itemcomment_textview_id"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="gone"
        android:src="@drawable/ic_wirte_post"
        android:tint="@color/colorGray"
        app:layout_constraintRight_toLeftOf="@+id/itemcomment_imageview_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/itemcomment_imageview_modify"
        android:layout_marginRight="3dp"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <ImageView
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:id="@+id/itemcomment_imageview_delete"
        android:tint="@color/colorGray"
        android:src="@drawable/icon_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp" />

</android.support.constraint.ConstraintLayout>